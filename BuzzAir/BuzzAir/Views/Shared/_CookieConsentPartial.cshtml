@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <div id="cookieConsent" class="alert alert-info alert-dismissible fade show d-flex align-items-center fixed-bottom mb-0" role="alert" style="z-index: 1050;">
        <i class="fas fa-cookie-bite fa-2x me-3"></i>
        <div class="flex-grow-1">
            Use cookies to enhance your experience and analyze traffic.
            <a asp-page="/Privacy" class="alert-link ms-1">Learn More</a>.
        </div>
        <button type="button"
                class="btn btn-sm btn-outline-secondary ms-3 accept-policy"
                data-bs-dismiss="alert"
                aria-label="Accept"
                data-cookie-string="@cookieString">
            Accept
        </button>
    </div>
    <script>
        (function () {
            var button = document.querySelector("#cookieConsent button[data-cookie-string]");
            button.addEventListener("click", function (event) {
                document.cookie = button.dataset.cookieString;
            }, false);
        })();
    </script>
}
