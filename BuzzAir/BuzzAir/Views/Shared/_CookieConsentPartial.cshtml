@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <nav id="cookieConsent" class="navbar navbar-light bg-light fixed-top navbar-expand-md" role="alert">
        <div class="container">
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#cookieConsentContent"
                    aria-controls="cookieConsentContent"
                    aria-expanded="false"
                    aria-label="Toggle cookie consent banner">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="cookieConsentContent">
                <span class="navbar-text me-2">
                    <i class="fas fa-info-circle"></i>
                </span>
                <p class="navbar-text flex-grow-1 mb-0">
                    We use cookies to enhance your experience and to analyze our traffic. By clicking “Accept,” you agree to our use of cookies.
                </p>
                <div class="ms-auto d-flex align-items-center gap-2">
                    <a asp-controller="Home" asp-action="Privacy" class="btn btn-info btn-sm">
                        Learn More
                    </a>
                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            data-cookie-string="@cookieString">
                        Accept
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <script>
        (function () {
            var acceptBtn = document.querySelector("#cookieConsent button[data-cookie-string]");
            if (acceptBtn) {
                acceptBtn.addEventListener("click", function (event) {
                    document.cookie = event.target.dataset.cookieString;
                    var banner = document.getElementById("cookieConsent");
                    if (banner) {
                        banner.classList.add("d-none");
                    }
                });
            }
        })();
    </script>
}
