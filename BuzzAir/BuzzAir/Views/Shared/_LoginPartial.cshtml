@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="ml-auto">
        <ul class="nav navbar-nav ml-auto">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="text-white mr-2"> Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <a href="#" onclick="document.getElementById('logoutForm').submit()" class="text-white mr-2">Logout</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav ml-auto">
        <li><a asp-area="Identity" asp-page="/Account/Register" class="text-white mr-2">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="text-white mr-2">Login</a></li>
    </ul>
}
