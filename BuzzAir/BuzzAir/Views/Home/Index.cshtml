@{
    ViewData["Title"] = "Home";
}

<div>
    <h1>
        Welcome to BuzzAir
    </h1>
    <h2>
        <text>Hi</text>@Html.Raw(Model.Greeting)
    </h2>
    @if (Model.Authenticated)
    {
    <form action="~/Home/Search" method="post">
        <section>
            <select id="origin" name="origin" required>
                <option value="" disabled selected hidden>
                    Origin
                </option>
                @for (int i = 0; i < Model.Airports.Count; i++)
                {
                    <option selected value="@Model.Airports[i].Name">
                        @(Model.Airports[i].Name + ", " + Model.Airports[i].City + ", " + Model.Airports[i].Country)
                    </option>
                }
            </select>
        </section>
        <section>
            <select name="destination" required>
                <option value="" disabled selected hidden>
                    Destination
                </option>
                @for (int i = 0; i < Model.Airports.Count; i++)
                {
                    <option value="@Model.Airports[i].Name">
                        @(Model.Airports[i].Name + ", " + Model.Airports[i].City + ", " + Model.Airports[i].Country)
                    </option>
                }
            </select>
        </section>
        <section>
            <input name="passengersNumber" type="number" value="1" min="1" max="10" />
        </section>
        <section>
            <input type="submit" value="Search Flights" />
        </section>
    </form>
    }
    else
    {
        <img src="https://drive.google.com/open?id=1CA8iADHEDFz5OseFgbg3q-hAOG5uKtCX" alt="buzz" />
    }
</div>
