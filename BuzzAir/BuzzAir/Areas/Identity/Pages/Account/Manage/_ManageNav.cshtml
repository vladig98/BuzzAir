@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">Manage Your Account</h5>
        <ul class="nav nav-pills flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext) rounded"
                   id="profile"
                   asp-page="./Index">
                    <i class="fas fa-user me-2"></i> Profile
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext) rounded"
                   id="email"
                   asp-page="./Email">
                    <i class="fas fa-envelope me-2"></i> Email
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext) rounded"
                   id="change-password"
                   asp-page="./ChangePassword">
                    <i class="fas fa-key me-2"></i> Password
                </a>
            </li>

            @if (hasExternalLogins)
            {
                <li class="nav-item mb-2" id="external-logins">
                    <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext) rounded"
                       id="external-login"
                       asp-page="./ExternalLogins">
                        <i class="fas fa-user-shield me-2"></i> External Logins
                    </a>
                </li>
            }

            <li class="nav-item mb-2">
                <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) rounded"
                   id="two-factor"
                   asp-page="./TwoFactorAuthentication">
                    <i class="fas fa-lock me-2"></i> Two-Factor Authentication
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext) rounded"
                   id="personal-data"
                   asp-page="./PersonalData">
                    <i class="fas fa-file-alt me-2"></i> Personal Data
                </a>
            </li>
        </ul>
    </div>
</div>
