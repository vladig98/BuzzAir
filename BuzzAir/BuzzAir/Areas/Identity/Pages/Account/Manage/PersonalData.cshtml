@page
@model PersonalDataModel

@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container py-5">
    <h3 class="mb-4">@ViewData["Title"]</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p>Your account contains personal data that you have provided to us. This page allows you to download or permanently delete that data.</p>
                    <p><strong>Deleting this data will permanently remove your account and cannot be undone.</strong></p>

                    <div class="d-flex gap-2 justify-content-between">
                        <form id="download-data" asp-page="DownloadPersonalData" method="post">
                            <button class="btn btn-primary">Download Data</button>
                        </form>
                        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete Account & Data</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
