@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Manage External Logins";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>
    <partial name="_StatusMessage" for="StatusMessage" />

    @if (Model.CurrentLogins?.Count > 0)
    {
        <div class="mt-4">
            <h4>Linked Accounts</h4>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Provider</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var login in Model.CurrentLogins)
                    {
                        <tr>
                            <td id="@($"login-provider-{login.LoginProvider}")">@login.ProviderDisplayName</td>
                            <td>
                                @if (Model.ShowRemoveButton)
                                {
                                    <form asp-page-handler="RemoveLogin" method="post" class="d-inline">
                                        <input type="hidden" name="LoginProvider" value="@login.LoginProvider" />
                                        <input type="hidden" name="ProviderKey" value="@login.ProviderKey" />
                                        <button type="submit" class="btn btn-sm btn-danger" title="Remove this login">
                                            Remove
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Required</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (Model.OtherLogins?.Count > 0)
    {
        <div class="mt-5">
            <h4>Link Another External Account</h4>
            <hr />
            <form asp-page-handler="LinkLogin" method="post">
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var provider in Model.OtherLogins)
                    {
                        <button id="@($"link-login-button-{provider.Name}")"
                                type="submit"
                                class="btn btn-outline-primary"
                                name="provider"
                                value="@provider.Name"
                                title="Link @provider.DisplayName">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        </div>
    }
</div>
