@page
@model EnableAuthenticatorModel

@{
    ViewData["Title"] = "Configure Authenticator App";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="container py-5">
    <h3 class="mb-4">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="card shadow-sm">
        <div class="card-body">
            <p>To use an authenticator app, follow these steps:</p>

            <ol class="mb-4">
                <li class="mb-3">
                    <p>
                        Download a two-factor authenticator app, for example:
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fa-brands fa-google-play"></i>
                                <a href="https://go.microsoft.com/fwlink/?Linkid=825072" target="_blank">
                                    Microsoft Authenticator (Android)
                                </a>
                            </li>
                            <li class="mb-2">
                                <i class="fa-brands fa-app-store"></i>
                                <a href="https://go.microsoft.com/fwlink/?Linkid=825073" target="_blank">
                                    Microsoft Authenticator (iOS)
                                </a>
                            </li>
                            <li class="mb-2">
                                <i class="fa-brands fa-google-play"></i>
                                <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en" target="_blank">
                                    Google Authenticator (Android)
                                </a>
                            </li>
                            <li>
                                <i class="fa-brands fa-app-store"></i>
                                <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8" target="_blank">
                                    Google Authenticator (iOS)
                                </a>
                            </li>
                        </ul>
                    </p>
                </li>

                <li class="mb-3">
                    <p>
                        Scan the QR code below or manually enter this key into your authenticator app:
                        <kbd class="bg-light px-2 py-1 text-dark fw-bolder">@Model.SharedKey</kbd> (spaces and casing do not matter).
                    </p>

                    <div class="d-flex justify-content-center mb-3">
                        <div id="qrCode"></div>
                    </div>
                    <div id="qrCodeData" data-url="@Model.AuthenticatorUri" class="d-none"></div>
                </li>

                <li>
                    <p>
                        After scanning or entering the key, your authenticator app will generate a six-digit code. Enter that code below to verify.
                    </p>

                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <form id="send-code" method="post" novalidate>
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Code"
                                           type="text"
                                           class="form-control"
                                           autocomplete="off"
                                           placeholder="Enter verification code" />
                                    <label asp-for="Input.Code">Verification Code</label>
                                    <span asp-validation-for="Input.Code" class="text-danger small"></span>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">Verify</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </li>
            </ol>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript" src="~/lib/qrcodejs/qrcode.js"></script>
    <script type="text/javascript" src="~/js/qr.js"></script>
}
