@page
@model LogoutModel

@{
    ViewData["Title"] = "Log Out";
}

<div class="container py-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <p>You are currently logged in. Click the button below to log out.</p>
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/" method="post" class="mt-3">
                            <button type="submit" class="btn btn-danger w-100">
                                Log Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="alert alert-success text-center">
                    <p class="mb-0">You have successfully logged out of the application.</p>
                </div>
            </div>
        </div>
    }
</div>
