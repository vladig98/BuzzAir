@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="container py-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <hr />
    <p>Your login is protected with an authenticator app. Please enter the code generated by your app below.</p>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl" novalidate>
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="one-time-code" inputmode="numeric" />
                    <label asp-for="Input.TwoFactorCode"></label>
                    <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMachine" class="form-check-input" />
                    <label asp-for="Input.RememberMachine" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMachine)
                    </label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Log In</button>
            </form>

            <p class="mt-3 text-center">
                <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">
                    Don't have access to your authenticator device? Log in with a recovery code
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
