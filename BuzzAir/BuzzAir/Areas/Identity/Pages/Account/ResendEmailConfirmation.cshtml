@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="container py-5">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <p class="text-muted mb-4">Enter the email associated with your account to resend the confirmation link.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   aria-required="true"
                                   placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Resend Confirmation</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
