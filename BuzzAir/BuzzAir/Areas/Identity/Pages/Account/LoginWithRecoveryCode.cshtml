@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery Code Verification";
}

<div class="container py-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <hr />
    <p>
        You've chosen to log in using a recovery code. This login session will not be remembered
        unless you later authenticate with an authenticator app or disable two-factor authentication.
    </p>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Recovery Code" />
                    <label asp-for="Input.RecoveryCode"></label>
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Log In</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
